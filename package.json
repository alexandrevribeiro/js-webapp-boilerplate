{
  "name": "js-webapp-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for a web app using express-app-runner + Babel (ES6) + ESLint",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development babel-node src/index.js",
    "lint": "esw src --color",
    "lint-watch": "npm run lint -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexandrevribeiro/js-webapp-boilerplate.git"
  },
  "author": "Alexandre Ribeiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexandrevribeiro/js-webapp-boilerplate/issues"
  },
  "homepage": "https://github.com/alexandrevribeiro/js-webapp-boilerplate#readme",
  "dependencies": {
    "express-app-runner": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-watch": "^3.1.0"
  }
}
